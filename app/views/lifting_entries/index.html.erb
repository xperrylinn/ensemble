<%= stylesheet_link_tag "pictures" %>
<%= render 'shared/header' %>

<h1>Lifting Entries</h1>

<table>
  <thead>
    <tr>
      <th>Lifting activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lifting_entries.each do |lifting_entry| %>
      <tr>
        <% if !lifting_entry.entry.nil? %>
          <td>
            <h1><%= lifting_entry.entry.title %></h1>
          </td>
          <td>
            <%= lifting_entry.entry.text[0..25] %> ...
          </td>
          <td>
            <% if lifting_entry.entry.images.attached? %>
              <%= image_tag lifting_entry.entry.images[0], size: '200' %>
            <% end %>
          </td>
        <% end %>
        <td>
          <%= link_to 'Show', lifting_entry %>
        </td>
        <td>
          <%= link_to 'Edit', edit_lifting_entry_path(lifting_entry) %>
        </td>
        <td>
          <%= link_to 'Destroy', lifting_entry, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lifting Entry', new_lifting_entry_path %>